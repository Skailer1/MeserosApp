<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:padding="16dp"
    tools:context=".ui.producto.DialogCategoryActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/alike"
        android:text="Seleccione Categoria"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <RadioGroup
        android:layout_width="230dp"
        android:layout_height="228dp"
        android:layout_marginTop="60dp"
        android:id="@+id/radioGroupCategorias">

        <RadioButton
            android:id="@+id/radioBtnTodos"
            android:fontFamily="@font/alike"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todas" />

        <RadioButton
            android:id="@+id/radioBtnComidas"
            android:fontFamily="@font/alike"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comidas" />

        <RadioButton
            android:id="@+id/radioBtnBebidas"
            android:fontFamily="@font/alike"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bebidas" />

        <RadioButton
            android:id="@+id/radioBtnCafeteria"
            android:fontFamily="@font/alike"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cafeteria" />

        <RadioButton
            android:id="@+id/radioBtnDesayuno"
            android:fontFamily="@font/alike"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desayunos" />
    </RadioGroup>
</RelativeLayout>
